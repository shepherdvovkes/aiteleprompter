{
  "name": "aiteleprompter-server",
  "version": "1.0.0",
  "description": "Simple server for AI Teleprompter",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "express": "^4.19.2",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^23.0.1",
    "supertest": "^6.3.3"
  },
  "jest": {
    "collectCoverageFrom": [
      "server.js",
      "js/**/*.js",
      "!tests/**/*.js",
      "!node_modules/**",
      "!coverage/**"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "coverageDirectory": "coverage",
    "projects": [
      {
        "displayName": "server",
        "testMatch": [
          "<rootDir>/tests/server/**/*.test.js"
        ],
        "testEnvironment": "node",
        "collectCoverageFrom": [
          "server.js"
        ]
      },
      {
        "displayName": "client",
        "testMatch": [
          "<rootDir>/tests/client/**/*.test.js"
        ],
        "testEnvironment": "jsdom",
        "collectCoverageFrom": [
          "js/**/*.js"
        ]
      }
    ]
  }
}
